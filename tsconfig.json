{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "outDir": "output/",
        "sourceMap": true
    },
    "exclude": [
        "node_modules",
        "typings/browser",
        "typings/browser.d.ts"
    ],
    "filesGlob": [
        "!./node_modules/**/*.ts",
        "typings/main.d.ts",
        "src/**/*.ts"
    ],
    "atom": {
        "rewriteTsconfig": false
    }
}
